/* 水平间距 */
.community {
  height: 100vh;
}
.community .background {
  height: 100vh;
  position: relative;
  background: linear-gradient(to bottom, #3D3170, #7B68EE);
}
.community .search-button {
  width: 80%;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.community .dropdown-wrapper {
  width: 80%;
}
.community .uni-list {
  border: thin solid;
  background-color: #F7F7FF;
}
.community .uni-list-cell {
  justify-content: flex-start;
}
.community .note-list-container {
  max-width: 100%;
  height: 500px;
  overflow-y: scroll;
  /* 允许垂直滚动 */
  overflow-x: hidden;
}
.community .note-list {
  max-width: 100%;
  height: calc(100vh - 30px);
  overflow-y: auto;
  overflow-x: hidden;
  /* 添加样式，用于展示他人笔记 */
}
.community .note-item {
  max-width: 100%;
  display: flex;
  flex-direction: column;
  padding: 10px;
  position: relative;
  border-bottom: 3px solid #ddd;
  z-index: 100;
}
.community .note-title {
  color: #ddd;
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 5px;
}
.community .note-tags {
  margin-bottom: 5px;
}
.community .tag {
  display: inline-block;
  background-color: #f2f2f2;
  color: #666;
  font-size: 12px;
  padding: 2px 5px;
  border: thin dashed;
  border-radius: 3px;
  margin-right: 5px;
}
.community .note-content {
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  max-height: calc(100% - 150px);
}
.community .note-preview {
  color: #F7F7FF;
  font-size: 14px;
  line-height: 1.5;
  max-height: 60px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.community .note-image {
  float: left;
  max-height: 100%;
  max-width: 100%;
  margin-left: 10px;
}
.community .note-icons {
  height: 40;
  position: absolute;
  bottom: 0;
  right: 0;
}
.community .navbar {
  background-color: #8C7DEE;
  position: fixed;
  bottom: 0;
  width: 330px;
  height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
  border: thin solid;
  z-index: 100;
}
.community .navbar .nav-item {
  width: 170px;
  height: 50px;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: thin solid;
  border-radius: 10%;
  background-color: #483D8B;
}
.community .navbar .nav-item ._i {
  font-size: 30px;
  margin-bottom: 5px;
}
.community .navbar .nav-item ._span {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 12px;
}
.community .navbar .nav-item.active {
  background-color: #535391;
}
.community .navbar .nav-item ._i {
  font-size: 20px;
}
.community .navbar .nav-item ._span {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 25px;
  color: #F7F7FF;
}
.community .navbar .nav-item.active ._span {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 25px;
  color: #C0C0C0;
}
.community .navbar .creat-item {
  background-color: #9370DB;
  width: 90px;
  height: 50px;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: thin solid;
  border-radius: 50%;
}
.community .navbar .creat-item ._i {
  font-size: 30px;
  margin-bottom: 5px;
}
.community .navbar .creat-item ._span {
  color: #f5f5f5;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 12px;
}
.community .navbar .creat-item ._i {
  font-size: 20px;
}
.community .navbar .creat-item ._span {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 25px;
}

