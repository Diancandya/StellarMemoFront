}
.community .background {
  height: 100vh;
  position: relative;
  background: linear-gradient(to bottom, #3D3170, #7B68EE);
}
.community .note-list-container {
  max-width: 100%;
  height: 500px;
  overflow-y: scroll;
  /* 允许垂直滚动 */
  overflow-x: hidden;
}
.community .note-list {
  max-width: 100%;
  height: calc(100vh - 30px);
  overflow-y: auto;
  overflow-x: hidden;
  /* 添加样式，用于展示他人笔记 */
}
.community .note-item {
  max-width: 100%;
  display: flex;
  flex-direction: column;
  padding: 10px;
  position: relative;
  border-bottom: 3px solid #ddd;
  z-index: 100;
}
.community .note-title {
  color: #ddd;
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 5px;
}
.community .note-tags {
  margin-bottom: 5px;
}
.community .tag {
  display: inline-block;
  background-color: #f2f2f2;
  color: #666;
  font-size: 12px;
  padding: 2px 5px;
  border: thin dashed;
  border-radius: 3px;
  margin-right: 5px;
}
.community .note-content {
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  max-height: calc(100% - 150px);
}
.community .note-preview {
  color: #F7F7FF;
  font-size: 14px;
  line-height: 1.5;
  max-height: 60px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.community .note-image {
  float: left;
  max-height: 100%;
  max-width: 100%;
  margin-left: 10px;
}
.community .note-icons {
  height: 40;
  position: absolute;
  bottom: 0;
  right: 0;
}

