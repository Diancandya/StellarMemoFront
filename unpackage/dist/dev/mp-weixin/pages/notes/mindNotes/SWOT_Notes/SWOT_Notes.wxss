.row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  margin-bottom: 10px;
}
.column {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 50%;
}
.block {
  position: relative;
  width: 100%;
  padding-bottom: 100%; /* 宽高相等 */
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
}
.textarea {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  resize: none;
}
